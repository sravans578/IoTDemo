<body>
        <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
                <a class="navbar-brand" href="#"> IoT Middleware</a>
        </nav>

<div class="register-form">
    <form action="http://localhost:1337/register" method="post" id="register">
        <h4 class="text-center">Device Registration</h4> 
         <div class="form-group">
            <input type="text" class="form-control" placeholder="Deviceid" required="required" name="did">
        </div> 
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" required="required" name="uname">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" required="required" name="pass">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Devicegw" required="required" name="dgw">
        </div>  
         <div class="form-group">
            <button type="submit" class="btn btn-success btn-block">Register</button>

        </div>

        <div class="d-flex justify-content-center">
            <a href="/register">Register as a user</a>
        </div>

    </form>

</div>

<div class="login-form">
    <form action="http://localhost:1337/login" method="post" id="login">
        <h4 class="text-center">Device Login</h4> 
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Deviceid" required="required" name="did">
        </div> 
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" required="required" name="uname">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" required="required" name="pass">
        </div> 
        <div class="form-group">
            <button type="submit" class="btn btn-success btn-block">Log in</button>

        </div>

        <div class="d-flex justify-content-center">
            <a href="/login">Login as a user</a>
        </div>

    </form>

</div>
</body>
<script>
    $( "#register" ).submit(function( event ) {
      event.preventDefault();
      var $form = $(this),
        device_id = $form.find( "input[name='did']" ).val(),
        user_name = $form.find( "input[name='uname']" ).val(),
        pass = $form.find( "input[name='pass']" ).val(),
        device_gw = $form.find( "input[name='dgw']" ).val(),
        url = $form.attr( "action" ); 
      // POST request
      
       var posting = $.post( url, {deviceid:device_id, username: user_name, password : pass,devicegw:device_gw, type: "admin"} ); 
      // Response
       posting.done(function(data) {
        console.log(data);
				if(data.success == "Registration Successful"){
            sessionStorage.setItem('Emp_ID', user_name);
            location.href = "/evaluate";
        }
        else{
            alert("Registration failed, please try again");
        }
      });
    });
    </script>

